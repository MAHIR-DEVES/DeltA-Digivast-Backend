
// Employee/User model
model User {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  password    String
  phone       String?
  photoUrl    String?
  role        Role        @default(EMPLOY)
  designation Designation?

  // Optional job info
  skills      String?     // comma separated or JSON string
  experience  Int?        // years of experience
  department  String?     // e.g., "Design", "Development"

  // Tracking fields
  status      STATUS     @default(ACTIVE) // ACTIVE, INACTIVE, ON_LEAVE
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  lastLogin   DateTime?   // track employee last login
}